<%= form_for(@message) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <ul>
    <li>
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title, class: 'form-control' %>
    </li>
    <li>
    <%= f.label :content, '内容' %>
    <%= f.text_area :content, class: 'form-control', rows: 5 %>
    </li>
  </ul>

  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>
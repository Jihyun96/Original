<%= form_for(@message) do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @message.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <ul>
    <li>
    <%= f.label :title, 'タイトル' %>
    <%= f.text_field :title %>
    </li>
    <li>
    <%= f.label :content, '内容' %>
    <%= f.text_area :content %>
    </li>
  </ul>

  <%= f.submit '投稿' %>
<% end %>
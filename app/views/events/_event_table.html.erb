    <table class="table">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">タイトル</th>
          <th scope="col">作成者</th>
          <th scope="col">締切日</th>
          <th scope="col">投稿日</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |e| %>
        <tr>
          <th scope="row"><%= e.id %></th>
          <td><%= link_to e.title, e %></td>
          <td><%= e.user.name %></td>
          <td><% if e.deadline < Time.now %>
              <p>申し込みは終了しました。</p>
              <% else %>
              <%= e.deadline.to_s(:published_on)%>
              <% end %></td>
          <td><%= e.created_at.to_s(:published_on) %></td>
        </tr>
      　<% end %>
      </tbody>
    </table>